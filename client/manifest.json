{
    "name": "Auto text translator for browser",
    "version": "1.1",
    "description": "Auto translator for text edit in browser",
    "content_scripts": [
        {
          "js": ["jquery.min.js", "googleDocsUtil.js", "translate.js"],
          "matches": ["*://*/*"],
          "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        "result.html",
        "trans.png"
    ],
    "permissions" : [
        "declarativeContent",
        "activeTab",
        "notifications",
        "http://localhost/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "commands": {
        "translate": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y"
            },
            "description": "Translate short-cut"
        }
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}
